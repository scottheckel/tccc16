@model TodoProgressive.Models.Todo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Todo</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Todo</legend>

        @Html.HiddenFor(model => model.TodoId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsComplete)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsComplete)
            @Html.ValidationMessageFor(model => model.IsComplete)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>